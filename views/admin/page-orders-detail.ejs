<script>
        // Get a reference to the select element and the save button
 const statusSelect = document.getElementById("status-select");
 const saveButton = document.getElementById("save-button");
 const orderID = '<%= order._id %>'

// Add an event listener to the select element
 statusSelect.addEventListener("change", function() {
    // Get the selected value
    const selectedValue = statusSelect.value;
     const status = selectedValue
    
    
    $.ajax({
        url:'/admin/adminhome/selected-status',
        method:'post',
        data:{
            status : status,
            orderID :orderID
         }
    })
    
});

// You can also add an event listener to the save button if you want to do something when it's clicked
saveButton.addEventListener("click", function() {
    // Perform an action when the "Save" button is clicked
    // For example, you can send the selected value to the server.
});

</script>
