                                                    </a>
                                                    <% if (order[i].delevery_status === 'Delivered') { %>
                                                        <button class="btn btn-warning" style="width: 80px; height: 35px;" onclick="Return('<%= order[i]._id %>')">RETURN</button>
                                                        <%} else if(order[i].delevery_status === 'Return'){ %>
